{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2017",
    "strict": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "esModuleInterop": true,
    "typeRoots": [
      "node_modules/@types"
    ],
    "outDir": "./dist",
    "declaration": true
  },
  "exclude": [
    "config/cache",
    "node_modules",
    "spool",
    "vendor",
    "./dist/**/*",
    "./test/**/*",
    "./examples/**/*",
    "./mock/**/*"
  ]
}
